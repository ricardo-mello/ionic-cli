{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "baseUrl": "./",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "strictNullChecks": true,
    "target": "es6",
    "typeRoots": [
      "../../node_modules/@types"
    ],
    "lib": [
      "es2017.object",
      "es2016",
      "dom"
    ]
  },
  "include": [
    "../../types/archiver.d.ts",
    "../../types/cross-spawn.d.ts",
    "../../types/slice-ansi.d.ts",
    "../../types/superagent.d.ts",
    "../../types/strip-ansi.d.ts",
    "../../types/leek.d.ts",
    "../../types/os-name.d.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/__tests__/*.ts"
  ]
}
