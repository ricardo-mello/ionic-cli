{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist",
    "strictNullChecks": true,
    "target": "es6",
    "lib": [
      "es2017.object",
      "es2016",
      "dom"
    ]
  },
  "include": [
    "../../types/archiver.d.ts",
    "../../types/cross-spawn.d.ts",
    "../../types/superagent.d.ts",
    "../../types/qrcode-terminal.d.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/__tests__/*.ts"
  ]
}
