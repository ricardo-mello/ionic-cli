{
  "name": "ionic",
  "version": "3.0.0",
  "preferGlobal": true,
  "description": "A tool for creating and developing Ionic Framework mobile apps.",
  "homepage": "http://ionicframework.com/",
  "author": "Ionic Team <hi@ionic.io> (http://ionic.io)",
  "bin": {
    "ionic-cli": "./bin/ionic"
  },
  "engines": {
    "node": ">=6"
  },
  "main": "./dist/ionic.js",
  "typings": "./dist/ionic.d.ts",
  "scripts": {
    "build": "npm run lint && npm run clean && ../../node_modules/.bin/concurrently -p '[{name}]' -n 'src' '../../node_modules/.bin/tsc'",
    "clean": "rm -rf ./dist",
    "changelog": "conventional-changelog -i CHANGELOG.md -s -p angular",
    "lint": "../../node_modules/.bin/tslint -c ../../tslint.json 'src/**/*.ts'",
    "test": "../../node_modules/.bin/jest",
    "globallink": "npm link",
    "watch": "npm run clean && ../../node_modules/.bin/concurrently -p '[{name}]' -n 'src,test' '../../node_modules/.bin/tsc --watch'"
  },
  "keywords": [
    "ionic",
    "ionic framework",
    "ionicframework",
    "mobile",
    "app",
    "hybrid",
    "cordova",
    "native",
    "phonegap"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/driftyco/ionic-cli.git"
  },
  "bugs": {
    "url": "https://github.com/driftyco/ionic-cli/issues"
  },
  "license": "MIT",
  "devDependencies": {
    "@ionic/cli-utils": "^0.0.1",
    "chalk": "^1.1.3",
    "cross-spawn": "^4.0.2",
    "minimist": "^1.2.0",
    "node-fetch": "^1.6.3",
    "opn": "^4.0.2",
    "path-exists": "^3.0.0",
    "semver": "^5.3.0",
    "tar": "^2.2.1"
  },
  "jest": {
    "moduleFileExtensions": ["ts", "js"],
    "transform": {
      "^.+\\.(ts)$": "<rootDir>/preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.(ts|js)$"
  }
}
