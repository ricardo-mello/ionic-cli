{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist",
    "strictNullChecks": true,
    "target": "es6",
    "lib": [
      "es2017.object",
      "es6"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "types/index.d.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
